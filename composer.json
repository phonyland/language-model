{
    "name": "phonyland/language-model",
    "description": "‚öôÔ∏è Phony Language Model for üôÉ Phony Framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Yunus Emre Delig√∂z",
            "email": "ye@deligoz.me"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "phonyland/ngram": "dev-master",
        "rybakit/msgpack": "^v0.9.0"
    },
    "autoload": {
        "psr-4": {
            "Phonyland\\LanguageModel\\": "src/"
        }
    },
    "require-dev": {
        "phonyland/dev-tools": "dev-master"
    },
    "autoload-dev": {
        "psr-4": {
            "Phonyland\\LanguageModel\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "process": "rector process src",
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test:process": "rector process src --dry-run",
        "test:types": "phpstan analyse --ansi --memory-limit=-1",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:process",
            "@test:types",
            "@test:unit"
        ]
    }
}
